  <div class="container">
    <div class="row">
      <!--新規投稿入力フォームを一覧画面に配置-->
      <%= form_with model: [:admin, @genre], method: :post, local:true do |f| %>
        <%= f.text_field :name,placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class: 'btn btn-sm btn-success' %>
      <% end %>
    </div><br>
    <div class="row">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル一覧</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-sm btn-warning" %></td>
              <td><%= link_to "削除", admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>