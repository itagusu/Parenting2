<!DOCTYPE html>
<html>
  <head>
    <title>Parenting</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="side">
      <div class="side_in">
        <header class="header">
          <div class="header_logo">
            <%= link_to root_path, data: {"turbolinks" => false}, class: 'navbar-brand  ml-3 col-md-3 offset-md-1' do %>
              <%= image_tag 'logo.jpg', :size => '100x100', class: 'd-inline-block'%>
            <% end %>
          </div>
          <div class="search">
            <%= form_with url: search_path, local: true, method: :get do |f| %>
            <div class="search_form">
              <%= f.text_field :word, class: "search_text", placeholder: "検索" %>
              </div>
              <div class="search_btn">
              <%= f.submit "検索", class: "btn btn-outline-secondary fas fa-user-edit" %>
              </div>
            <% end %>
          </div>
          <nav class="nav">
            <ul>
            <% if user_signed_in? %>
              <li>
                <%= link_to "通知", notifications_path %>
              </li>
              <li>
                <%= link_to "サイト概要", about_path %>
              </li>
              <li>
                <%= link_to "マイページ", my_page_path %>
              </li>
              <li>
                <%= link_to "新規投稿", new_post_path %>
              </li>
              <li>
                <%= link_to "投稿一覧", posts_path %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            <% elsif admin_signed_in? %>
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>
              <li>
                <%= link_to "ユーザー一覧", admin_users_path %>
              </li>
              <li>
                <%= link_to "ジャンル一覧", admin_genres_path %>
              </li>
            <% else %>
              <li>
                <%= link_to "サイト概要", about_path %>
              </li>
              <li>
                <%= link_to "新規登録", new_user_registration_path %>
              </li>
              <li>
                <%= link_to "ログイン", new_user_session_path %>
              </li>
            <% end %>
            </ul>
          </nav>
        </header>
        <div class="yield">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
