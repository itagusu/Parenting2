<% post.post_comments.each do |post_comment| %>
        <div class="user_profile_image">
          <%= attachment_image_tag post_comment.user, :profile_image, size: "80x80", fallback: "default_profile.jpg" %>
        </div>
        <%= link_to post_comment.user.last_name + post_comment.user.first_name, user_path(post_comment.user) %>
        <%= post_comment.comment %><br>
        <%= post_comment.created_at.strftime('%Y年%-m月%-d日') %>
        <% if post_comment.user == current_user %>
          <%= link_to "", post_post_comment_path(post_comment.post, post_comment), class: 'text-secondary fas fa-trash-alt', method: :delete, data: { confirm: '本当に削除しますか？' }, remote: true %>
        <% end %><br><hr>
      <% end %>
      <br>
