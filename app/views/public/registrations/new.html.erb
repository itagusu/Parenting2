<div id="registration_new">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <p class="form">
    <div class="name-field">
    <span class="field-last_name">
      <%= f.text_field :last_name, autofocus: true, class: "form-control", :size=>"10", placeholder: "姓" %>
    </span>

    <span class="field-first_name">
      <%= f.text_field :first_name, autofocus: true, class: "form-control", :size=>"10", placeholder: "名" %><br><br>
    </span>
    </div>
    <span class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", :size=>"42", placeholder: "email_address" %><br><br>
    </span>

    <span class="field">
      <%# if @minimum_password_length %>
        <%#= @minimum_password_length %>
      <%# end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", :size=>"42", placeholder: "password(6文字以上)" %><br><br>
    </span>

    <span class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", :size=>"42", placeholder: "password(再確認)" %>
    </span><br>
        <span id="btn-border">
          <%= f.submit "Sign up" %>
        </span>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>
