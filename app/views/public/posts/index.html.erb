<div class="container">
  <div class="row">
    <div class="col-md-4 col-sm-6">
      <%= render 'public/searches/genre_list', genres: @genres %>
      <div><br>
        <h5>いいねランキングTOP３</h5>
        <tbody>
          <% @ranks.each.with_index(1) do |post, i| %>
          <%= i %>位
            <tr>
              <td>
                <div class="user_profile_image">
                <%= link_to post_path(post) do %>
                  <%= attachment_image_tag(post.user, :profile_image, size: "60x60", fallback: "default_profile.jpg") %>
                <% end %><br>
                </div>
                <%= link_to post.user.full_name, post_path(post), class: 'text-decoration-none text-secondary' %>
              </td>
              <td><%= post.body %></td>
            </tr><hr>
          <% end %>
        </tbody>
      </div>

    </div>
    <div class="col-md-8 col-sm-6">
      <%= render 'public/posts/index', posts: @posts %>
    </div>
  </div>
</div>

