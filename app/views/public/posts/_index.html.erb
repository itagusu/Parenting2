<div>
  <table class="post_list">
    <tbody class="post_list_item">
      <% posts.each do |post| %>
        <tr>
          <td>
            <div class="user_profile_image">
            <%= link_to post_path(post) do %>
              <%= attachment_image_tag(post.user, :profile_image, size: "80x80", fallback: "default_profile.jpeg") %>
            <% end %><br>
            </div>
            <%= link_to post.user.last_name + post.user.first_name, post_path(post) %>
          </td>
          <td><%= post.body %></td>
          <td><%#= render 'public/favorites/favorite_btn', post: @post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
