<div>
  <table class="post_list">
    <tbody class="post_list_item">
      <% posts.each do |post| %>
        <tr>
          <td>
            <div class="user_profile_image">
            <%= link_to post_path(post) do %>
              <%= attachment_image_tag(post.user, :profile_image, size: "60x60", fallback: "default_profile.jpg") %>
            <% end %><br>
            </div>
            <%= link_to post.user.last_name + post.user.first_name, post_path(post), class: 'text-decoration-none text-secondary' %><hr>
          </td>
          <td><%= post.body %></td>
          <td><%#= render 'public/favorites/favorite_btn', post: @post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <ul class="pagination justify-content-center">
    <%= paginate posts %>
  </ul>
</div>
