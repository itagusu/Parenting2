<div class="post_list">
  <% posts.each do |post| %>
    <div class="row">
      <div class="col-md-2">
        <div class="user_profile_image">
          <%= link_to post_path(post) do %>
            <%= attachment_image_tag(post.user, :profile_image, size: "50x50", fallback: "default_profile.jpg") %>
          <% end %>
        </div>
        <div>
          <%= link_to post.user.last_name + post.user.first_name, post_path(post), class: 'text-decoration-none text-secondary' %>
        </div>
      </div>
      <div class="col-md-10">
        <%= post.body %>
        <%#= render 'public/favorites/favorite_btn', post: @post %>
      </div>
    </div><hr>
  <% end %>
  <ul class="pagination justify-content-center">
    <%= paginate posts %>
  </ul>
</div>
