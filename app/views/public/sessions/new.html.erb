<div id="session_new">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <p class="form">
     <p class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", :size=>"10", placeholder: "email_address" %><br><br>
      </p>

      <p class="field">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", :size=>"10", placeholder: "password" %><br><br>
      </p>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div><br>
    <% end %>


    <span id="btn-border">
      <%= f.submit "Log in" %>
    </span>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>